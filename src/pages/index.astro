---
// Component imports
import MainLayout from '../layouts/MainLayout.astro'
import PostCard from '../components/PostCard.astro'
import Link from '../components/Link.astro'

// utils imports
import { formatBlogPosts } from '../js/utils'

const allPosts = await Astro.glob('./blog/*.md')
const formattedPosts = formatBlogPosts(allPosts, {limit: 3})
---

<MainLayout title="My Blog">
  <section class="container about" aria-label="About Me">
    <img src="/images/headshot.jpg" alt="My headshot" width="200" height="300">
    <div class="content">
      <h1 class="h1">My Blog</h1>
      <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Laborum molestiae eius sapiente in, ratione hic ab modi placeat 
      <Link
        href="/about"
        style="primary"
        text="âœ‹ Say Hello"
      />
    </div>
  </section>
  <section class="container" aria-label="New Blog Posts">
    <h2 class="h1">New Blog Posts</h2>
    <div class="post-container">
      {
        // allPosts.map((post) => (
        formattedPosts.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType="h3"
          />
        ))
      }
    </div>
  </section>
</MainLayout>

